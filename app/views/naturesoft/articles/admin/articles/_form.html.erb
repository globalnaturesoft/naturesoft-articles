<%= form_for([naturesoft_articles, :admin, article], html: {class: "form-horizontal validate", multipart: true}) do |f| %>

    <div class="form-group">
      <label class="col-md-2 control-label" ><%= t(:image) %> <span class='text-danger'>*</span></label>
      <div class="media no-margin-top col-md-10">
        <div class="media-left">
          <img src="<%= article.image_url.system %>" style="border-radius: 2px;" alt="">
        </div>
  
        <div class="media-body">
          <input type="file" name="article[image_url]" class="file-styled">
          <span class="help-block">Accepted formats: gif, png, jpg.</span>
        </div>
      </div>
    </div>
    
    <div class="form-group">
        <label class="col-md-2 control-label" ><%= t(:title) %> <span class='text-danger'>*</span></label>
        <div class="col-md-10">
            <%= f.text_field :title, class: "form-control required" %>
        </div>
    </div>
        
    <div class="form-group field">
        <label class="col-md-2 control-label" ><%= t(:category) %> <span class='text-danger'>*</span></label>
        <div class="col-md-10">
            <select name="category_ids[]" id="category_ids" class="multi-select2-article-categories" data-placeholder="<%= t(:placeholder_categories) %>..." multiple="multiple">
                <% @categories.each do |item| %>
                    <option <%= "selected" if article.categories.include?(item) %> value="<%= item.id %>"><%= item.parent.first.name + " - " if item.parent.present? %> <%= item.name %></option>
                <% end %>
            </select>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-md-2 control-label" ><%= t(:content) %> <span class='text-danger'>*</span></label>
    </div>
    
    <div class="form-group">
        <div class="col-md-12">
            <%= f.text_area :content, rows: "4", cols: "4", id: "editor-full" %>
        </div>
    </div>

    <div class="text-right">
        <%= button_tag "#{t(:save)} <i class=\"icon-plus22 position-right\"></i>".html_safe, class: "btn btn-primary"%>
        <%= link_to "#{t(:cancel)} <i class=\"icon-cross3 position-right\"></i>".html_safe, naturesoft_articles.admin_articles_path, class: "btn btn-danger"%>
    </div>
    
<% end %>

