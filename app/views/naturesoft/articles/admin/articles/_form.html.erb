<% if article.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul>
    <% article.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for([naturesoft_articles, :admin, article], html: {class: "form-horizontal", id: "validate_checking", multipart: true}) do |f| %>

    <div class="form-group">
      <label class="col-lg-2 control-label" ><%= t(:image) %> <span class='text-danger'>*</span></label>
      <div class="media no-margin-top col-lg-10">
        <div class="media-left">
          <img src="<%= article.image_url %>" style="width: 60px; height: 60px; border-radius: 2px;" alt="">
        </div>
  
        <div class="media-body">
          <input type="file" name="article[image_url]" class="file-styled">
          <span class="help-block">Accepted formats: gif, png, jpg.</span>
        </div>
      </div>
    </div>
    
    <div class="form-group">
        <label class="col-lg-2 control-label" ><%= t(:title) %> <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <%= f.text_field :title, class: "form-control required" %>
        </div>
    </div>
        
    <div class="form-group field">
        <label class="col-lg-2 control-label" ><%= t(:category) %> <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <select name="category_ids[]" id="category_ids" class="multi-select2-article-categories required" data-placeholder="<%= t(:placeholder_categories) %>..." multiple="multiple">
                <% @categories.each do |item| %>
                    <option <%= "selected" if article.categories.include?(item) %> value="<%= item.id %>"><%= item.parent.first.name + " - " if item.parent.present? %> <%= item.name %></option>
                <% end %>
            </select>
        </div>
    </div>
        
    <div class="form-group">
      <label class="col-lg-2 control-label" ><%= t(:article_image) %> <span class='text-danger'>*</span></label>
      <div class="col-lg-10">
        <%= f.collection_select(:image_id, Naturesoft::Articles::Image.all, :id, :name, {:prompt=> "#{t(:choose_image_type)}"}, {class: "select2"}) %>
      </div>
    </div>
        
    <div class="form-group">
        <label class="col-lg-2 control-label" ><%= t(:content) %> <span class='text-danger'>*</span></label>
    </div>
    
    <div class="form-group">
        <div class="col-lg-12">
            <%= f.text_area :content, rows: "4", cols: "4", id: "editor-full" %>
        </div>
    </div>

    <div class="text-right">
        <%= button_tag "#{t(:save)} <i class=\"icon-plus22 position-right\"></i>".html_safe, class: "btn btn-primary"%>
        <%= link_to "#{t(:cancel)} <i class=\"icon-cross3 position-right\"></i>".html_safe, naturesoft_articles.admin_articles_path, class: "btn btn-danger"%>
    </div>
    
<% end %>

<%= render "editor_tinymce" %>