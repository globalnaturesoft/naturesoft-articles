<% title t(:articles) %>

<div class="page_actions">
    <%= link_to "#{t(:new_article)} <i class=\"icon-plus22 position-right\"></i>".html_safe, naturesoft_articles.new_admin_article_path, class: 'btn btn-primary' %>
</div>
<br />

<form class="listing-form">
    
    <div class="panel panel-flat">
        <div class="panel-body filter-box">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label><%= t(:sort_by) %></label>
                        <%= select_tag(:sort_by, options_for_select(Naturesoft::Articles::Article.sort_by, :selected => params[:sort_by]), class: "select2") %>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label><%= t(:sort_order) %></label>
                        <%= select_tag(:sort_orders, options_for_select(Naturesoft::Articles::Article.sort_orders, :selected => params[:sort_orders]), class: "select2") %>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label><%= t(:status) %></label>
                        <%= select_tag(:status, options_for_select(Naturesoft::Articles::Article.status, :selected => params[:status]), class: "select2") %>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group has-feedback">
                        <label><%= t(:search) %></label>
                        <input type="text" name="keyword" class="form-control" placeholder="Enter search..." value="<%= params[:keyword] %>">
                        <div class="form-control-feedback">
                            <i class="icon-search4 text-size-base"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
                
    <!-- Basic datatable -->
    <div class="panel panel-flat">
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr class="bg-teal-800">
                        <th><%= t(:image) %></th>
                        <th><%= t(:title) %></th>
                        <th><%= t(:content) %></th>
                        <th><%= t(:created_at) %></th>
                        <th class="text-center"><%= t(:actions) %></th>
                    </tr>
                </thead>
                <tbody>
                    <% @articles.each do |item| %>
                        <tr<% if item.approved == true %> class="success"<% end %><% if item.approved == false %> class="warning"<% end %>>
                            <td>
								<%= image_tag(item.image_url.system, size: "70x70", class: "img-rounded img-preview") %>
							</td>
                            <td class="kp_search">
                                <%= item.title %><br>
                                <%= display_status(item.status) %>
                            </td>
                            <td><%= truncate(strip_tags(item.content.html_safe), length: 150) %></td>
                            <td><%= item.created_at.strftime("%d/%m/%Y") %></td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <%= link_to '<i class="icon-pencil"></i>'.html_safe, naturesoft_articles.edit_admin_article_path(item), class: "btn bg-teal btn-icon btn-xs", title: item.title %>
                                    <button type="button" class="btn bg-teal dropdown-toggle btn-xs" data-toggle="dropdown"><span class="caret"></span></button>
                                    <ul class="dropdown-menu dropdown-menu-right">
                                        <% if item.approved == false %>
                                        <li>
                                            <%= link_to '<i class="glyphicon glyphicon-ok"></i> '.html_safe + t(:approve), naturesoft_articles.approve_admin_articles_path(id: item.id), method: :put %>
                                        </li>
                                        <% end %>
                                        <% if item.approved == true %>
                                        <li>
                                            <%= link_to '<i class="glyphicon glyphicon-remove"></i> '.html_safe + t(:disapprove), naturesoft_articles.disapprove_admin_articles_path(id: item.id), method: :put %>
                                        </li>
                                        <% end %>
                                    
                                        <% if item.status == "active" %>
                                        <li>
                                            <%= link_to '<i class="icon-lock4"></i> '.html_safe + t(:inactive), naturesoft_articles.disable_admin_articles_path(id: item.id), method: :put %>
                                        </li>
                                        <% end %>
                                        <% if item.status == "inactive" %>
                                        <li>
                                            <%= link_to '<i class="icon-unlocked"></i> '.html_safe + t(:active), naturesoft_articles.enable_admin_articles_path(id: item.id), method: :put %>
                                        </li>
                                        <% end %>
                                    
                                        <li>
                                            <%= link_to '<i class="icon-cross2"></i> '.html_safe + t(:delete), naturesoft_articles.admin_article_path(item), method: :delete, data: {confirm: 'Are you sure?'} %>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="dataTables_wrapper no-footer">
                <div class="datatable-footer showed">
                    <div class="dataTables_info" ><%= page_entries_info @articles %></div>
                    <div class="dataTables_paginate paging_simple_numbers">
                        <%= will_paginate @articles, previous_label: '←', next_label: '→', renderer: BootstrapPagination::Rails %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<!-- /basic datatable -->