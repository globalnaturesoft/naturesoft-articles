<% title t(:articles) %>

<!-- Basic datatable -->
<div class="panel panel-flat listing-form">
    <div class="panel-heading col-md-12">
        <h5 class="panel-title col-md-6"><span class="text-semibold"><%= t(:articles) %></span></h5>
        <%= link_to t(:new_article), naturesoft.new_admin_article_path, class: 'btn btn-primary pull-right' %>
    </div>
    
    <form class="listing-form" data-url="">				
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr class="bg-teal-800">
                        <th><%= t(:image) %></th>
                        <th><%= t(:title) %></th>
                        <th><%= t(:content) %></th>
                        <th><%= t(:created_at) %></th>
                        <th class="text-center"><%= t(:actions) %></th>
                    </tr>
                </thead>
                <tbody>
                    <% @articles.each do |item| %>
                        <tr>
                            <td></td>
                            <td><%= item.title %></td>
                            <td><%= truncate(strip_tags(item.content.html_safe), length: 150) %></td>
                            <td><%= item.created_at.strftime("%d/%m/%Y") %></td>
                            <td class="text-center">
                                <ul class="icons-list">
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                            <i class="icon-menu9"></i>
                                        </a>
        
                                        <ul class="dropdown-menu dropdown-menu-right">
                                            <li>
                                                <%= link_to '<i class="glyphicon glyphicon-edit"></i> '.html_safe + t(:edit), naturesoft.edit_admin_article_path(item) %>
                                            </li>
                                            <li>
                                                <%= link_to '<i class="icon-cross2"></i> '.html_safe + t(:delete), naturesoft.admin_article_path(item), method: :delete, data: {confirm: 'Are you sure?'} %>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="dataTables_wrapper no-footer">
                <div class="datatable-footer showed">
                    <div class="dataTables_info" ><%= page_entries_info @articles %></div>
                    <div class="dataTables_paginate paging_simple_numbers">
                        <%= will_paginate @articles, previous_label: '←', next_label: '→', renderer: BootstrapPagination::Rails %>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<!-- /basic datatable -->